if sidebar is bottom
  @import "sidebar-bottom"
else
  @import "sidebar-aside"

.widget
  @extend $base-style
  line-height: line-height
  word-wrap: break-word
  font-size: 0.9em
  ul, ol
    list-style: none
    margin: 0
    ul, ol
      margin: 0 20px
    ul
      list-style: disc
    ol
      list-style: decimal

.category-link
.tag-link
.tag-list-link
.category-list-link
  border: 1px dashed
  background: #F5F5F5
  padding: 0px 4px 4px
  margin-right: 12px
  border-radius: 4px
  display: inline-block
  margin: 6px 6px 6px 0px
  line-height: 16px
  font-size: 14px
  &:hover
    background: color-link
    text-decoration: none !important
    color: #fff
    span
      color: #fff

.category-count
.tag-count
.tag-list-count
.category-list-count
.archive-list-count
  padding-left: 2px
  color: color-grey
  font-size: 0.85em
  vertical-align: super

.tagcloud
  a
    margin-right: 5px

.post-widget
  color: color-grey
  padding: 6px
  i
    display: block !important
    margin-bottom: 1.1rem
    font-size: 1.1rem

.recent-list
  &:before
    content: "\f016"
    font-family: font-icon
    margin-right: logo-margin

.blogroll
  i
    margin-right: logo-margin

.archive-list-item
  &:before
    content: "\f073"
    font-family: font-icon
    margin-right: logo-margin

#search-form-wrap
  width: auto
  margin: auto
  padding-bottom: 20px
  @media mq-mobile
    width: 100%
    right: -100%

.search-form-input
  float: left
  padding: 4px
  background: #fff
  color: color-default
  width: 100%
  height: 1.8rem
  font: 14px font-sans
  outline: none
  border: 1px solid #ddd
  border-radius: 6px
  &::-webkit-search-results-decoration
  &::-webkit-search-cancel-button
    -webkit-appearance: none

.search-form-submit
  margin-top: -1.4rem
  font: 13px font-icon
  border: none
  background: none
  color: #bbb
  float: right
  margin-right: 8px
  &:hover, &:focus
    color: #777
